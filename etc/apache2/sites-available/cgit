<VirtualHost git.thomaslevine.com:80>
        ServerAdmin occurrence@thomaslevine.com
 
        Alias /assets/ "/var/www/assets/"
        <Directory "/var/www/assets/">
                AllowOverride None
                Options +ExecCGI
                Order allow,deny
                Allow from all
        </Directory>
        ScriptAlias / "/var/www/cgit.cgi/"

        ErrorLog ${APACHE_LOG_DIR}/error.log
        LogLevel warn
        CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
<VirtualHost *:80>
        ServerAdmin occurrence@thomaslevine.com

	AliasMatch ^/([^.].*)$ "/home/tlevine/$1"
	<Directory "/home/tlevine/">
                Order allow,deny
                Allow from all
        </Directory>

        ErrorLog ${APACHE_LOG_DIR}/error.log
        LogLevel warn
        CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
