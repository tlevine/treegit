<VirtualHost *:443>
        ServerAdmin TREEGIT_EMAIL_ADDRESS
 
        Alias /assets/ "/var/www/assets/"
        <Directory "/var/www/assets/">
                AllowOverride None
                Options +ExecCGI
                Order allow,deny
                Allow from all
        </Directory>

	AliasMatch ^/clone/([^.].*)?$ "/home/TREEGIT_USERNAME/$1"
	<Directory "/home/TREEGIT_USERNAME/">
		Options -Indexes
                Order allow,deny
                Allow from all
        </Directory>

	# Must be last
        ScriptAlias / "/var/www/cgit.cgi/"

        # Logs
        ErrorLog ${APACHE_LOG_DIR}/error.log
        LogLevel warn
        CustomLog ${APACHE_LOG_DIR}/access.log combined

        # SSL with a client certificate
        SSLEngine on
	SSLCertificateFile    /etc/ssl/certs/ssl-cert-treegit.cert
	#SSLCertificateFile    /etc/ssl/certs/ssl-cert-treegit.pem
	SSLCertificateKeyFile /etc/ssl/private/ssl-cert-treegit.key
	SSLCACertificateFile /etc/ssl/certs/ssl-cert-treegit.cert
	SSLVerifyClient require

</VirtualHost>
<VirtualHost *:80>
        Redirect 301 / https://TREEGIT_DOMAIN_NAME/
</VirtualHost>
